{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI (venv)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "scim_server.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}